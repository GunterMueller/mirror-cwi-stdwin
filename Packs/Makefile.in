
# Compiler options passed to subordinate makes
OPT=		@OPT@

# Subdirectories where to run make recursively
SUBDIRS=	textedit

all:
		for i in $(SUBDIRS); do \
			(echo $$i; cd $$i; $(MAKE) OPT="$(OPT)" all); \
		done

clean:
		for i in $(SUBDIRS); do \
			(echo $$i; cd $$i; $(MAKE) OPT="$(OPT)" clean); \
		done

clobber:
		for i in $(SUBDIRS); do \
			(echo $$i; cd $$i; $(MAKE) OPT="$(OPT)" clobber); \
		done
